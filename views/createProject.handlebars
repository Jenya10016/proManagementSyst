<div class="container mt-4">
  <h1>Create a Project</h1>
  <div id="error" class="bg-danger text-white">
  </div>
  <form>
    <div class="mb-3">
      <label for="projectName" class="form-label">Project Name</label>
      <input type="text" class="form-control" id="projectName" />
    </div>

    <div class="mb-3">
      <label for="editor" class="form-label">Project Description</label>
      <div id="editor" class="projectDesc"></div>
    </div>
    <button type="submit" id="createProjectBtn" class="btn btn-primary">Create
      Project</button>
  </form>
</div>
<script src="./js/project.js"></script>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
  var quill = new Quill('#editor', { theme: 'snow' });
</script>